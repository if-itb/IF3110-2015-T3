<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>CommentServlet</servlet-name>
        <servlet-class>org.stackexchange.controller.CommentServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>UpvoteQuestionServlet</servlet-name>
        <servlet-class>org.stackexchange.controller.UpVoteQuestionServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>DownvoteQuestionServlet</servlet-name>
        <servlet-class>org.stackexchange.controller.DownVoteQuestionServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>UpvoteAnswerServlet</servlet-name>
        <servlet-class>org.stackexchange.controller.UpVoteAnswerServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>DownvoteAnswerServlet</servlet-name>
        <servlet-class>org.stackexchange.controller.DownVoteAnswerServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>CommentServlet</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>UpvoteQuestionServlet</servlet-name>
        <url-pattern>/question/upvote</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>DownvoteQuestionServlet</servlet-name>
        <url-pattern>/question/downvote</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>UpvoteAnswerServlet</servlet-name>
        <url-pattern>/answer/upvote</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>DownvoteAnswerServlet</servlet-name>
        <url-pattern>/answer/downvote</url-pattern>
    </servlet-mapping>
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
